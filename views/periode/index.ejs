<div class="page-heading">
    <section class="section">
        <div class="card">
            <div class="card-header">
                <a href="/periode/create" class="btn btn-primary">Tambah +</a>
            </div>
            <div class="card-body">
               
                <%- include('../partials/message.ejs') %>
                
                <div class="table-responsive">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Nama Periode</th>
                                <th>Tagline</th>
                                <th>Tahun Periode</th>
                                <th>Dibuat</th>
                                <th>Diedit</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% periode.forEach((p, index) => { %>
                               <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= p.name %></td>
                                    <td><%= p.tagline %></td>
                                    <td><%= p.periode_year %></td>
                                    <td><%= p.createdAt %></td>
                                    <td><%= p.updatedAt %></td>
                                    <td>
                                        <a href="/periode/<%= p._id %>/edit"
                                            class="btn btn-warning text-white"><i class="bi bi-pencil-fill"></i></a>
                                        <button class="btn btn-danger delete-confirm" data-action="/periode/<%= p._id %>?_method=DELETE"><i class="bi bi-trash3-fill"></i></button>
                                    </td>
                               </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>