<section class="section">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Edit Kategori</h4>
        </div>
        <div class="card-body">
            <form method="POST" action="/achievements/<%= achievement._id %>/update?_method=PUT"
                class="form form-horizontal">
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="activity_name">Nama Kegiatan</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input type="text" id="activity_name"
                                class="form-control" name="activity_name"
                                placeholder="Nama Kategori" value="<%= achievement.activity_name %>" required />
                        </div>
                        <div class="col-md-4">
                            <label for="name">Nama Peserta</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input type="text" id="name"
                                class="form-control" name="name"
                                placeholder="Nama Peserta" value="<%= achievement.name %>" required />
                        </div>
                        <div class="col-md-4">
                            <label for="rank">Peringkat</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input type="text" id="rank"
                                class="form-control" name="rank"
                                placeholder="Peringkat" value="<%= achievement.rank %>" required />
                        </div>
                        <div class="col-md-4">
                            <label for="year">Tahun</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input type="text" id="year"
                                class="form-control" name="year"
                                placeholder="Tahun" value="<%= achievement.year %>" required />
                        </div>

                        <div class="col-md-4">
                        </div>
                        <div class="col-sm-8 d-flex justify-content-start mt-3">
                            <button type="submit" class="btn btn-primary me-1 mb-1 col-6 col-md-6">
                                Submit
                            </button>
                            <button type="reset" class="btn btn-light-secondary me-1 mb-1 col-6 col-md-6">
                                Reset
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>