<section class="section">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Edit Pengguna</h4>
        </div>
        <div class="card-body">
            <form method="POST" action="/users/<%= user._id %>/update?_method=PUT"
                class="form form-horizontal">
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="name">Nama Lengkap</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input type="text" id="name"
                                class="form-control" name="name"
                                placeholder="Nama Lengkap" value="<%= user.name %>" required />
                        </div>
                        <div class="col-md-4">
                            <label for="username">Username</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input type="text" id="username"
                                class="form-control" name="username"
                                placeholder="Username" value="<%= user.username %>" required />
                        </div>
                        <div class="col-md-4">
                            <label for="password">Password</label>
                        </div>
                        <div class="col-md-8 form-group">
                            <input type="password" id="password"
                                class="form-control" name="password"
                                placeholder="Password" />
                                <p>Kosongkan jika tidak ingin diubah</p>
                        </div>

                        <div class="col-md-4">
                        </div>
                        <div class="col-sm-8 d-flex justify-content-start mt-3">
                            <button type="submit" class="btn btn-primary me-1 mb-1 col-6 col-md-6">
                                Submit
                            </button>
                            <button type="reset" class="btn btn-light-secondary me-1 mb-1 col-6 col-md-6">
                                Reset
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>